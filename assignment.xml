<?xml version="1.0" encoding="UTF-8"?>
<project name="assignment" default="all">
  
  
  <property file="assignment.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.zip"/>
    <include name="*.apk"/>
    <include name="*.war"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.ane"/>
    <include name="*.swc"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.6" value="${jdk.home.1.6}/bin"/>
  <path id="jdk.classpath.1.6">
    <fileset dir="${jdk.home.1.6}">
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/rhino.jar"/>
      <include name="jre/lib/ext/pulse-java.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/gnome-java-bridge.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.6}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.6}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.6"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm4-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module Assignment -->
  
  <dirname property="module.assignment.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.assignment" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.assignment" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.assignment" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.assignment" value="${compiler.args}"/>
  
  <property name="assignment.output.dir" value="${module.assignment.basedir}/out/production/Assignment"/>
  <property name="assignment.testoutput.dir" value="${module.assignment.basedir}/out/test/Assignment"/>
  
  <path id="assignment.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="assignment.module.production.classpath">
    <path refid="${module.jdk.classpath.assignment}"/>
    <pathelement location="${idea.home}/lib/junit-4.10.jar"/>
  </path>
  
  <path id="assignment.runtime.production.module.classpath">
    <pathelement location="${assignment.output.dir}"/>
    <pathelement location="${idea.home}/lib/junit-4.10.jar"/>
  </path>
  
  <path id="assignment.module.classpath">
    <path refid="${module.jdk.classpath.assignment}"/>
    <pathelement location="${assignment.output.dir}"/>
    <pathelement location="${idea.home}/lib/junit-4.10.jar"/>
  </path>
  
  <path id="assignment.runtime.module.classpath">
    <pathelement location="${assignment.testoutput.dir}"/>
    <pathelement location="${assignment.output.dir}"/>
    <pathelement location="${idea.home}/lib/junit-4.10.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.assignment">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.assignment">
    <patternset refid="excluded.from.module.assignment"/>
  </patternset>
  
  <path id="assignment.module.sourcepath">
    <dirset dir="${module.assignment.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.assignment" depends="compile.module.assignment.production,compile.module.assignment.tests" description="Compile module Assignment"/>
  
  <target name="compile.module.assignment.production" depends="register.custom.compilers" description="Compile module Assignment; production classes">
    <mkdir dir="${assignment.output.dir}"/>
    <javac2 destdir="${assignment.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.assignment}/javac">
      <compilerarg line="${compiler.args.assignment}"/>
      <bootclasspath refid="assignment.module.bootclasspath"/>
      <classpath refid="assignment.module.production.classpath"/>
      <src refid="assignment.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.assignment"/>
    </javac2>
    
    <copy todir="${assignment.output.dir}">
      <fileset dir="${module.assignment.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.assignment.tests" depends="register.custom.compilers,compile.module.assignment.production" description="compile module Assignment; test classes" unless="skip.tests"/>
  
  <target name="clean.module.assignment" description="cleanup module">
    <delete dir="${assignment.output.dir}"/>
    <delete dir="${assignment.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.assignment" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.assignment" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>